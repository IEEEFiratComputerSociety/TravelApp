<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">







    <LinearLayout
        android:id="@+id/second_bottom_linear"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal"
        android:padding="5dp">


        <ImageButton
            android:id="@+id/GezdimButonu"
            android:onClick="GezdimButonu"
            android:layout_width="68dp"
            android:layout_height="52dp"
            android:layout_marginStart="40dp"
            android:contentDescription="@string/dm"
            app:srcCompat="@drawable/gezdim" />

        <ImageView
            android:id="@+id/cibik"
            android:layout_width="7dp"
            android:layout_height="100dp"
            android:padding="5dp"
            app:srcCompat="@android:drawable/screen_background_dark"
            tools:layout_editor_absoluteX="-7dp"
            tools:layout_editor_absoluteY="450dp"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="90dp"
            android:contentDescription="@string/gor">
        </ImageView>

        <ImageButton
            android:id="@+id/GordumButonu"
            android:layout_width="68dp"
            android:layout_height="52dp"
            app:srcCompat="@drawable/morgordum"
            android:layout_gravity="right"
            android:contentDescription="@string/begen" />


    </LinearLayout>


    <ImageView
        android:id="@+id/BuyukCibik"
        android:layout_width="456dp"
        android:layout_height="8dp"
        android:layout_marginTop="528dp"
        android:layout_marginBottom="58dp"
        android:src="@android:drawable/screen_background_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/AnaRecycle"
        android:layout_width="410dp"
        android:layout_height="523dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />







</RelativeLayout>








