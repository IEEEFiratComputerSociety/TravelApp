<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity">

    <ImageView
        android:id="@+id/GorselSec"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="55dp"
        android:onClick="GorselSec"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/selectedimage" />

    <EditText
        android:id="@+id/KendinYorumYap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="21dp"
        android:ems="10"
        android:hint="Yorum Yap"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:onClick="Upload"
        android:text="Görsel Yükle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/KendinYorumYap" />

    <ImageButton
        android:id="@+id/location"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="32dp"
        android:onClick="location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/KendinYorumYap"
        app:srcCompat="@drawable/ic_location" />

    <EditText
        android:id="@+id/YerAdi"
        android:layout_width="240dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Yer İsmi"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GorselSec" />

    <ImageButton
        android:id="@+id/photo"
        android:onClick="photo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="84dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/KendinYorumYap"
        app:srcCompat="@drawable/ic_photo" />


</androidx.constraintlayout.widget.ConstraintLayout>